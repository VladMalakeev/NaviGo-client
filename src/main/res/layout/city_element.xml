<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/city_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@drawable/city_bound">

    <TextView
        android:id="@+id/nameItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Odessa"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end">

        <Button
            android:id="@+id/downloadItem"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_file_download" />

        <Button
            android:id="@+id/clearItem"
            android:layout_width="40dp"
            android:enabled="false"
            android:layout_height="40dp"
            android:background="@drawable/ic_clear_black" />

    </LinearLayout>


</LinearLayout>